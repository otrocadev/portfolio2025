    background: var(--screaming-green);
    font-weight: 700;
    text-decoration: none;
    padding: 0.6rem 1rem;
    border-radius: 0.4rem;
    border: 2px var(--screaming-green) solid;
  }

  #cv-btn:hover {
    color: var(--screaming-green);
    background: var(--navy);
  }

  img {
    mask-image: linear-gradient(black 80%, transparent);
    width: 100%;
    @media (min-width: 480px) {
      width: auto;
    }
  }
