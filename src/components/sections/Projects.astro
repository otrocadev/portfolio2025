---
import ProjectCard from './projects/ProjectCard.astro'

import projectsList from '../../data/projects.ts'

interface Project {
  title: string
  githubLink: string
  liveLink: string
  imageUrl: string
  description: string
  techs: Array<string>
  right?: boolean
}
---

<section id="projects">
  <div id="projects-container">
    <h2>Featured Projects</h2>
    <div>
      {
        projectsList.map((project: Project, index: number) => (
          <ProjectCard
            title={project.title}
            githubLink={project.githubLink}
            liveLink={project.liveLink}
            imageUrl={project.imageUrl}
            description={project.description}
            techs={project.techs}
            right={index % 2 !== 0}
          />
        ))
      }
    </div>
  </div>
</section>

<style>
  #projects {
    width: 100%;
    background: var(--navy);
    border: 2px solid var(--background-lines);
    padding-bottom: 1rem;
  }
  #projects-container {
    @media (min-width: 480px) {
      max-width: 1024px;
    }
  }

  div {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
</style>
