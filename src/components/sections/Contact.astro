---
import { Icon } from 'astro-icon/components'
---

<section>
  <h2>Let's connect!</h2>
  <div id="connect-container">
    <div id="links">
      <a
        href="https://www.linkedin.com/in/otrocadev/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon class="icon" name="linkedin" />
        <h3>LinkedIn</h3>
      </a>
      <a
        href="https://github.com/otrocadev"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon class="icon" name="github" />
        <h3>Github</h3>
      </a>
    </div>
    <img
      id="img-otrocadev"
      src="/ot-roca-no-bg.avif"
      alt="Picture of Ot Roca, also known as otrocadev"
    />
  </div>
  <p>@otrocadev | 2025</p>
</section>

<style>
  h3 {
    font-family: 'Anonymous Pro', serif;
    font-weight: 700;
    font-style: normal;
    font-size: 36px;
    margin: 1rem 0;
    color: var(--antiflash-white);
  }

  h3:hover,
  h3:active {
    text-decoration: underline;
  }
  p {
    color: var(--screaming-green);
    font-weight: 700;
    font-size: 18px;
  }

  #connect-container {
    display: flex;
    flex-direction: column-reverse;
    max-width: 80%;
    margin: 0;
    padding: 1rem;
    @media (min-width: 720px) {
      flex-direction: row;
    }
  }

  a {
    color: white;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  img {
    mask-image: linear-gradient(black 80%, transparent);
    width: auto;
  }

  .icon {
    font-size: 28px;
  }
</style>
