---
const {
  title,
  githubLink,
  liveLink,
  imageUrl,
  right = false,
  techs,
} = Astro.props
import Tecnologies from './Tecnologies.astro'
---

<article class={right ? 'project-card right-image' : 'project-card left-image'}>
  <img src={imageUrl} alt=`Screenshot of the project ${title}` />
  <div class="card-info">
    <h3>{title}</h3>
    <p>
      <slot />
    </p>
    <Tecnologies techs={techs} />
    <div id="btns">
      <a
        class="secondary-btn"
        href={githubLink}
        target="_blank"
        rel="noopener noreferrer">Github code</a
      >
      <a
        class="primary-btn"
        href={liveLink}
        target="_blank"
        rel="noopener noreferrer"
      >
        Live demo
      </a>
    </div>
  </div>
</article>

<style>
  .project-card {
    display: grid;
    background: var(--seablue);
    grid-template-rows: 1fr 1fr;
    border-radius: 1rem;
    overflow: hidden;
    grid-template-areas:
      'image'
      'text';
  }

  .left-image {
    @media (min-width: 720px) {
      grid-template-columns: 4fr 5fr;
      grid-template-rows: 1fr;
      grid-template-areas: 'image text';
    }
  }

  .right-image {
    @media (min-width: 720px) {
      grid-template-columns: 5fr 4fr;
      grid-template-rows: 1fr;
      grid-template-areas: 'text image';
    }
  }

  .card-info {
    margin: 3rem;
    grid-area: text;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    grid-area: image;
  }

  #btns {
    margin: 1rem auto;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }
</style>
