---
const { title, githubLink, liveLink, imageUrl, right = false } = Astro.props
---

<article class={right ? 'project-card right-image' : 'project-card left-image'}>
  <img src={imageUrl} alt=`Screenshot of the project ${title}` />
  <div class="card-info">
    <h3>{title}</h3>
    <p>
      <slot />
    </p>
    <div id="btns">
      <a
        id="github-btn"
        href={githubLink}
        target="_blank"
        rel="noopener noreferrer">Github code</a
      >
      <a
        id="live-btn"
        href={liveLink}
        target="_blank"
        rel="noopener noreferrer"
      >
        Live demo
      </a>
    </div>
  </div>
</article>

<style>
  h3 {
    color: var(--screaming-green);
    font-family: 'Anonymous Pro', serif;
    font-weight: 700;
    font-style: normal;
    font-size: 28px;
  }

  .project-card {
    display: grid;
    background: var(--seablue);
    grid-template-rows: 1fr 1fr;
    border-radius: 1rem;
    overflow: hidden;
    grid-template-areas:
      'image'
      'text';
  }

  .left-image {
    @media (min-width: 720px) {
      grid-template-columns: 4fr 5fr;
      grid-template-rows: 1fr;
      grid-template-areas: 'image text';
    }
  }

  .right-image {
    @media (min-width: 720px) {
      grid-template-columns: 5fr 4fr;
      grid-template-rows: 1fr;
      grid-template-areas: 'text image';
    }
  }

  .card-info {
    margin: 1rem 3rem;
    grid-area: text;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    grid-area: image;
  }

  #btns {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  a {
    font-family: 'Anonymous Pro', serif;
    width: fit-content;
    font-weight: 700;
    text-decoration: none;
    padding: 0.6rem 1rem;
    border-radius: 0.4rem;
    transition: transform 0.3s ease;
  }

  #github-btn {
    border: 2px var(--screaming-green) solid;
    color: var(--screaming-green);
    background: var(--richblack);
  }

  #github-btn:hover {
    color: var(--richblack);
    background: var(--screaming-green);
    transform: translateY(-3px);
  }

  #live-btn {
    border: 2px var(--screaming-green) solid;
    color: var(--richblack);
    background: var(--screaming-green);
  }

  #live-btn:hover {
    color: var(--screaming-green);
    background: none;
    transform: translateY(-3px);
  }
</style>
