---
import TitulationCard from './education/TitulationCard.astro'
import CertificateCard from './education/CertificateCard.astro'
import { mainEducation, certificates } from '../../data/education.ts'
import { sanityUrl } from '../../lib/sanity.ts'

const educationQuery = `*[_type=="education"] | order(_updatedAt desc){
  titulation,
  entity,
  date,
  location,
  description,
  "imageUrl": image.asset->url
}`

const certificatesQuery = `*[_type=="certificate"] | order(_updatedAt desc){
  titulation,
  entity,
  date
}`

const educationData = await fetch(
  `${sanityUrl}?query=${encodeURIComponent(educationQuery)}`
).then((res) => res.json())

const certificatesData = await fetch(
  `${sanityUrl}?query=${encodeURIComponent(certificatesQuery)}`
).then((res) => res.json())

const educationList = educationData.result
const certificatesList = certificatesData.result

interface Education {
  titulation: string
  entity: string
  date: string
  location: string
  description: string
  imageUrl: string
}

interface Certificate {
  titulation: string
  entity: string
  date: string
}
---

<section id="education">
  <div id="education-container">
    <h2>Education & Certificates</h2>
    <div id="major-education">
      {
        educationList.map((education: Education, index: number) => (
          <TitulationCard
            titulation={education.titulation}
            entity={education.entity}
            date={education.date}
            location={education.location}
            imageUrl={education.imageUrl}
          >
            {education.description}
          </TitulationCard>
        ))
      }
    </div>
    <div id="certificates">
      {
        certificatesList.map((certificate: Certificate, index: number) => (
          <CertificateCard
            titulation={certificate.titulation}
            entity={certificate.entity}
            date={certificate.date}
          />
        ))
      }
    </div>
  </div>

  <style>
    #education {
      background: var(--navy);
      border: 2px solid var(--background-lines);
      width: 100%;
    }

    #education h2 {
      text-align: center;
      margin: 0;
      padding: 2rem 0;
    }

    #education-container {
      padding: 1rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;

      @media (min-width: 480px) {
        max-width: 1024px;
      }
    }

    #major-education {
      display: grid;
      grid-template-columns: 1fr;
      margin-top: 0;

      @media (min-width: 720px) {
        grid-template-columns: 4fr 3fr;
        gap: 1rem;
      }
    }

    #certificates {
      display: grid;
      width: 100%;
      grid-template-columns: 1fr;
      gap: 1rem;

      @media (min-width: 480px) {
        grid-template-columns: repeat(2, 1fr);
      }

      @media (min-width: 1024px) {
        grid-template-columns: repeat(3, 1fr);
      }
    }
  </style>
</section>

<script>
  import { gsap } from 'gsap'
  import { ScrollTrigger } from 'gsap/ScrollTrigger'
  gsap.registerPlugin(ScrollTrigger)

  gsap.from('.titulation-card', {
    duration: 1,
    y: 50,
    autoAlpha: 0,
    stagger: 0.3,
    ease: 'power2.out',
    scrollTrigger: {
      scrub: true,
      trigger: '#major-education',
      start: 'top 80%',
      end: 'bottom 60%',
    },
  })

  gsap.from('.certificate-card', {
    duration: 0.3,
    y: 50,
    autoAlpha: 0,
    stagger: 0.1,
    ease: 'power2.out',
    scrollTrigger: {
      scrub: true,
      trigger: '#certificates',
      start: 'top 90%',
      end: 'bottom 95%',
    },
  })
</script>
