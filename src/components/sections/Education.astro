---
import TitulationCard from './education/TitulationCard.astro'
import { mainEducation } from '../../data/education.ts'
---

<section id="education">
  <div id="education-container">
    <h2>Education & Certificates</h2>
    <section id="major-education">
      {
        mainEducation.map((item) => (
          <TitulationCard
            titulation={item.titulation}
            entity={item.entity}
            date={item.date}
            location={item.location}
            image={item.image}
          />
        ))
      }
    </section>
  </div>

  <style>
    #education {
      background: var(--navy);
      border: 2px solid var(--background-lines);
      width: 100%;
      padding-bottom: 4rem;
    }

    #education h2 {
      text-align: center;
      margin: 0;
      padding: 2rem 0;
    }

    #education-container {
      padding: 1rem;

      @media (min-width: 480px) {
        max-width: 1024px;
      }
    }

    #major-education {
      display: grid;
      grid-template-columns: 1fr;
      gap: 8rem;
      margin-top: 0;

      @media (min-width: 480px) {
        grid-template-columns: 4fr 3fr;
        grid-template-rows: 1fr;
        gap: 2rem;
      }
    }

    div {
      display: flex;
      flex-direction: column;
      gap: 5rem;
    }
  </style>
</section>
