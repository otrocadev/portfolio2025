---
import Presentation from '../sections/Presentation.astro'
import Projects from '../sections/Projects.astro'
import Contact from '../sections/Contact.astro'
import Experience from '../sections/Experience.astro'
import Education from '../sections/Education.astro'
---

<main>
  <Presentation />
  <Projects />
  <Experience />
  <Education />
  <Contact />
</main>

<style is:global>
  main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: auto;
  }

  h1,
  h2,
  h3 {
    color: var(--screaming-green);
    font-family: 'Raleway', serif;
    font-weight: 800;
    font-style: normal;
  }

  h2 {
    font-size: 40px;
    font-size: var(--font-size-h2);
    text-align: center;
  }

  h3 {
    font-size: var(--font-size-h3);
    margin: 0;
  }

  p,
  span {
    font-size: var(--font-size-md);
  }

  section {
    margin: 1rem;
    max-width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  a {
    font-family: 'Raleway', serif;
    width: fit-content;
    font-size: var(--font-size-ms);
    font-weight: 600;
    text-decoration: none;
    padding: var(--button-padding);
    border-radius: 0.4rem;
    transition: transform 0.3s ease;
  }

  .primary-btn {
    width: fit-content;
    color: var(--richblack);
    background: var(--screaming-green);
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.4rem;
    border: 2px var(--screaming-green) solid;
    transition: transform 0.3s ease;
  }

  .primary-btn:hover,
  .primary-btn:active {
    color: var(--screaming-green);
    background: var(--navy);
    transform: translateY(-3px);
    box-shadow: 0px 5px 5px 0px rgba(0, 0, 0, 0.75);
  }

  .secondary-btn {
    border: 2px var(--screaming-green) solid;
    color: var(--screaming-green);
    background: var(--richblack);
  }

  .secondary-btn:hover,
  .secondary-btn:active {
    color: var(--richblack);
    background: var(--screaming-green);
    transform: translateY(-3px);
    box-shadow: 0px 5px 5px 0px rgba(0, 0, 0, 0.75);
  }
</style>
